<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.GridView?>
<SplitPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:id="musicSplitPane"
           fx:controller="io.playqd.controller.music.MusicSplitPaneController"
           dividerPositions="0.2, 0.5">

    <VBox VBox.vgrow="ALWAYS">
        <ToolBar>
            <ComboBox promptText="tool bar"/>
        </ToolBar>

        <ListView fx:id="artistsListView" VBox.vgrow="ALWAYS"/>

    </VBox>

    <VBox>
        <ToolBar>
            <Label text="artist albums list view toolbar"/>
        </ToolBar>
        <ListView fx:id="albumsListView" VBox.vgrow="ALWAYS"/>
    </VBox>

    <VBox>
        <ToolBar>
            <ComboBox promptText="tool bar"/>
        </ToolBar>

        <TableView fx:id="tracksTableView" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="trackNumberCol" text="#" maxWidth="40"/>
                <TableColumn fx:id="titleCol" text="Title"/>
                <TableColumn fx:id="timeCol" text="Time" maxWidth="70" style="-fx-alignment: CENTER-RIGHT"/>
            </columns>
        </TableView>
        <HBox>
            <Label text="total time"/>
        </HBox>
    </VBox>

</SplitPane>
